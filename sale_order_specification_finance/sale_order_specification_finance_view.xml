<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="sale_order_specification_social_view" model="ir.ui.view">
            <field name="name">sale.order.specification.social.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <page string="Other Information" position="after">
                    <page string="Financial">
                        <h3>Finance</h3>
                        <hr/>
                        <div>
                            <field name="credit_form" placeholder="Credit Form"/>
                            <field name="url_legacy" placeholder="Legacy from URL if applicable" widget="url"/>
                        </div>
                        <hr/>
                        <field name="dealer_track_information" placeholder="Dealer Track Information"/>
                        <field name="phone_number" placeholder="Phone Number"/>
                        <hr/>
                        <field name="finance_notes"/>
                    </page>
                </page>
            </field>
        </record>
    </data>
</openerp>
