<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="product_template_form_view" model="ir.ui.view">
      <field name="name">product.template.common.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <data>
          <page string="Information" position="after">
            <page string="Specification">
              <label for="product_fleet_spec_ids"/>
              <field name="product_fleet_spec_ids">
                <tree editable="bottom">
                  <field name="brand_id" />
                  <field name="model_id" domain="[('brand_id', '=', brand_id)]" options="{'create_name_field': 'modelname'}" context="{'default_brand_id': brand_id}"/>
                  <field name="year_start" />
                  <field name="year_end" />
                  <field name="spec_ids" widget="many2many_tags"/>
                  <field name="cylinder_id" />
                  <field name="litre_id" />
                  <field name="engine_code_id"/>
                </tree>
              </field>
              <label for="global_spec_ids"/>
              <field name="global_spec_ids">
                <tree>
                  <field name="name"/>
                  <field name="category_id"/>
                </tree>
              </field>
            </page>
          </page>
        </data>
      </field>
    </record>
  </data>
</openerp>
