<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="sale_order_specification_social_view" model="ir.ui.view">
            <field name="name">sale.order.specification.social.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <page string="Other Information" position="after">
                    <page string="Social">
                        <span>Configuration and Social Networks</span>
                        <group>
                            <group>
                                <field name="dns_management"/>
                                <field name="primary_domain_name"/>
                            </group>
                            <group>
                                <field name="url_seo"/>
                                <field name="google_analytics"/>
                                <field name="google_conversion_id"/>
                                <field name="google_conversion_label"/>
                                <field name="google_map"/>
                            </group>
                            <group>
                                <field name="facebook"/>
                                <field name="youtube"/>
                                <field name="twitter"/>
                                <field name="social_notes"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</openerp>
